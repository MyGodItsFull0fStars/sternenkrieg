<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wenboda.sk_ui3.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/bg_desc"/>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo_desc"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/start"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"


                android:text="@string/play"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:textSize="20sp" />

            <Button
                android:id="@+id/about"
                android:layout_width="300dp"
                android:layout_height="wrap_content"


                android:backgroundTint="@color/colorPrimary"
                android:text="@string/about"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:textSize="20sp" />

            <Button
                android:id="@+id/options"
                android:layout_width="300dp"


                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/options"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:textSize="20sp" />

            <Button
                android:id="@+id/network"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/connection_type"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dice"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/dice"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:textSize="20sp" />


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
