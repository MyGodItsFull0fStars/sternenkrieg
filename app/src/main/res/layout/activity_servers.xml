<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nicht verbinden"
        android:id="@+id/tvIP"
        android:layout_gravity="center_vertical" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nicht verbinden"
        android:textSize="30sp"/>


    <EditText
        android:id="@+id/etSend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Information angeben" />



    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Host"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:text="Erstellen"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:textSize="20sp"
            android:layout_above="@+id/qr_button"
            android:layout_alignLeft="@+id/btnHostEnd"
            android:layout_alignStart="@+id/btnHostEnd" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Send"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/btnAccept"
            android:layout_alignBottom="@+id/btnAccept"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <Button
            android:id="@+id/qr_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:background="@color/colorPrimary"
            android:text="QR"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnSend"
            android:layout_alignStart="@+id/btnSend" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starten"
            android:id="@+id/btn_starten"
            android:textSize="30sp"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnHostEnd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="End"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/qr_button"
            android:layout_alignBottom="@+id/qr_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

    </RelativeLayout>



</LinearLayout>